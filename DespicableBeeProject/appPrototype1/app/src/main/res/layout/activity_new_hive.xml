<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        tools:context=".hive.NewHiveActivity">


        <EditText
            android:id="@+id/newHiveET"
            android:layout_width="322dp"
            android:layout_height="61dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.213"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHiveTV" />

        <Spinner
            android:id="@+id/newHiveSpinner"
            android:layout_width="336dp"
            android:layout_height="67dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dropdown"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.213"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHiveTV3" />

        <Spinner
            android:id="@+id/newHiveSpinner2"
            android:layout_width="336dp"
            android:layout_height="67dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/dropdown"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.213"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHiveTV2" />

        <TextView
            android:id="@+id/newHiveTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/apiary"
            android:textColor="#CB8617"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHiveET" />

        <Spinner
            android:id="@+id/newHiveSpinner3"
            android:layout_width="336dp"
            android:layout_height="67dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dropdown"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHiveTV4" />

        <TextView
            android:id="@+id/newHiveTV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Box Size"
            android:textColor="#CB8617"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.009"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHiveSpinner2" />

        <TextView
            android:id="@+id/newHiveTV5"
            android:layout_width="139dp"
            android:layout_height="38dp"
            android:layout_marginTop="15dp"
            android:text="@string/strength"
            android:textColor="#CB8617"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHiveSpinner3" />

        <TextView
            android:id="@+id/newHiveTV4"
            android:layout_width="139dp"
            android:layout_height="38dp"
            android:layout_marginTop="15dp"
            android:text="@string/type"
            android:textColor="#CB8617"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.007"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHiveSpinner" />

        <TextView
            android:id="@+id/newHiveTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/hive_number"
            android:textAlignment="viewStart"
            android:textColor="#CB8617"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.018"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="330dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHiveTV5" />

        <TextView
            android:id="@+id/newHiveTV6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/weak"
            android:textAlignment="viewStart"
            android:textColor="#CB8617"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" />

        <TextView
            android:id="@+id/newHiveTV7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/average"
            android:textAlignment="viewStart"
            android:textColor="#CB8617"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.359"
            app:layout_constraintStart_toEndOf="@+id/newHiveTV6"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" />

        <TextView
            android:id="@+id/newHiveTV8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/strong"
            android:textAlignment="viewStart"
            android:textColor="#CB8617"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/newHiveTV7"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" />

        <TextView
            android:id="@+id/newHiveTV9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/honey_boxes"
            android:textAlignment="viewStart"
            android:textColor="#CB8617"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHiveTV7" />

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/elegantbutton"
            android:layout_width="165dp"
            android:layout_height="46dp"
            android:layout_marginTop="12dp"
            app:backGroundColor="@color/burned_sierra"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.603"
            app:layout_constraintStart_toEndOf="@+id/newHiveTV9"
            app:layout_constraintTop_toBottomOf="@+id/newHiveTV8" />

        <TextView
            android:id="@+id/newHiveTV10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@string/has_queen"
            android:textAlignment="viewStart"
            android:textColor="#CB8617"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.007"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHiveTV9" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="32dp"
            android:thumb="@drawable/switch_design"
            android:track="@drawable/switch_track"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.624"
            app:layout_constraintStart_toEndOf="@+id/newHiveTV10"
            app:layout_constraintTop_toBottomOf="@+id/elegantbutton"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/newhiveTV11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="84dp"
            android:text="@string/no"
            android:textColor="#CB8617"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/switch1"
            app:layout_constraintHorizontal_bias="0.341"
            app:layout_constraintStart_toEndOf="@+id/newHiveTV10"
            app:layout_constraintTop_toBottomOf="@+id/newHiveTV7" />

        <TextView
            android:id="@+id/newhiveTV12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:text="@string/yes"
            android:textColor="#CB8617"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/switch1"
            app:layout_constraintTop_toBottomOf="@+id/newHiveTV8" />

        <TextView
            android:id="@+id/newhiveTV13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/marked"
            android:textColor="#CB8617"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHiveTV10" />

        <Spinner
            android:id="@+id/newHiveSpinner4"
            android:layout_width="179dp"
            android:layout_height="41dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/dropdown"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.844"
            app:layout_constraintStart_toEndOf="@+id/newhiveTV13"
            app:layout_constraintTop_toBottomOf="@+id/switch1" />

        <TextView
            android:id="@+id/newhiveTV14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/additional_notes"
            android:textColor="#CB8617"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newhiveTV13" />

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="309dp"
            android:layout_height="214dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/add_notes"
            android:inputType="textMultiLine"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newhiveTV14" />

        <Button
            android:id="@+id/savebutton"
            android:layout_width="334dp"
            android:layout_height="58dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corner"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="#CB8617"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
